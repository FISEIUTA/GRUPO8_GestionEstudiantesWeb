@model GestionEstudiantesWeb.Models.Matricula

<h4>Matricular estudiante</h4>
<p></p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Estudiante</label>
                <select asp-for="IdEstudiante" class ="form-control" asp-items="ViewBag.IdEstudiante">
					<option value="">Seleccione un estudiante</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Materia</label>
                <select asp-for="IdMateria" class ="form-control" asp-items="ViewBag.IdMateria">
					<option value="">Seleccione una materia</option>
                </select>
            </div>
            <p></p>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-danger">Cancelar</a>
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
