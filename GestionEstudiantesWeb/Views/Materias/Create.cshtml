@model GestionEstudiantesWeb.Models.Materia

<h4>Registrar materia</h4>
<p></p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nivel</label>
                <select asp-for="IdNivel" class ="form-control" asp-items="ViewBag.IdNivel">
                    <option value="">Seleccione un nivel</option>
                </select>

            </div>
            <div class="form-group">
                <label class="control-label">Docente</label>
                <select asp-for="IdDocente" class ="form-control" asp-items="ViewBag.IdDocente">
					<option value="">Seleccione un docente</option>
                </select>
            </div>
            <p></p>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-danger">Cancelar</a>
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
