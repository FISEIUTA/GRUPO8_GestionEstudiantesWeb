@model GestionEstudiantesWeb.Models.Nota

<h4>Editar nota</h4>
<p></p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdNota" />
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Calificacion" class="control-label"></label>
                <input asp-for="Calificacion" class="form-control" />
                <span asp-validation-for="Calificacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Estudiante y Materia</label>
                <select asp-for="IdMatricula" class="form-control" asp-items="ViewBag.IdMatricula"></select>
                <span asp-validation-for="IdMatricula" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                 <a asp-action="Index" class="btn btn-danger">Cancelar</a>
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
