@model IEnumerable<GestionEstudiantesWeb.Models.Estudiante>

<h4 class="text-center" mb-4>ESTUDIANTES REGISTRADOS</h4>
<p></p>
<p>
    <a asp-action="Create" class="btn btn-primary"> Nuevo Estudiante</a>
</p>
    <table class="table">
        <thead>
            <tr>
                <th>Cédula</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Correo</th>
                <th>Carrera</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Cedula)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                    <td>@Html.DisplayFor(modelItem => item.Correo)</td>
                    <td>@Html.DisplayFor(modelItem => item.oCarrera.Nombre)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.IdEstudiante" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.IdEstudiante" class="btn btn-info btn-sm">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.IdEstudiante" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
